<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="ie.ucd.cs.neilgrogan13204052.deathnotices.search.SearchActivity.SearchFragment">

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="50">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/searchNameButton"
                android:src="@drawable/ic_nametag"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:cropToPadding="false"
                android:adjustViewBounds="false"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_below="@+id/searchNameButton"
                android:text="@string/search_by_name"
                android:layout_centerInParent="true"
                android:id="@+id/viewNoticesText" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/searchAddressButton"
                android:src="@drawable/ic_address"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_below="@+id/searchAddressButton"
                android:text="@string/search_by_address"
                android:layout_centerInParent="true"
                android:id="@+id/searchAddressIntText" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

